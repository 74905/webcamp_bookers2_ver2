<% book.book_comments.each do |book_comment| %>
  <table>
    <tbody>
      <tr>
   <td><%=attachment_image_tag book_comment.user, :profile_image, fot: "jpg", fallback: "no_image.jpg", size: "40x40" %></br>
  <%= book_comment.user.name %></td>
  <td><%= book_comment.comment %></td>
  <% if book_comment.user.id == current_user.id %>
    <td><%= link_to "destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class:"btn btn-danger" %></td>
    </tr>
    <tbody>
  <% end %>
</table>
  <% end %>

  <%= form_with(model:[book, book_comment], remote: true) do |f| %>
  <%= f.text_area :comment, rows:"5", class:"form-control" %>
  <%= f.submit "送信" %>
  <% end %>